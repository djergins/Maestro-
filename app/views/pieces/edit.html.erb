<% provide(:title, "Edit Piece") %>
<h1>Update Piece</h1>

  <div class="col-lg-offset-3 col-sm-6 col-md-6">
    <%= form_for [@library, @piece], :html => {:class => "form-horizontal center"} do |f| %>
      <%= render 'shared/piece_error_messages' %>
      <div class="form-group">
        <p><I>* Denotes a required field.</I></p>
        <%= f.label :name, "Name*", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :composer, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :composer, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :arranger, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :arranger, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :library_number, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :library_number, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :key, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :key, class: "form-control" %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :grade, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :grade, class: "form-control" %>
        </div>
      </div>

      <%= f.submit "Save changes", class: "btn btn-lg btn-primary col-lg-offset-4 col-md-3 " %>
    <% end %>
  </div>
</div>
