
<% if !flash[:notice].blank? %>
    <div class="alert alert-info">
    <%= flash[:notice] %>
    </div>
    <% end %>
    <br />
    <%= link_to "Add Part", new_library_piece_part_path(@library.id, @piece.id), class: "btn btn-primary" %>
    <br />
    <br />
    <table class="table table-bordered table-striped">
    <thead>
    <tr>
    <th>Name</th>
    <th>Download Link</th>
    <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <% @parts.each do |part| %>
    <tr>
    <td><%= part.name %></td>
    <td><%= link_to "Download part", part.piece_url %></td>
    <td><%= button_to "Delete", library_piece_part_path(:id => part.id), method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{part.name}?" %></td>
    </tr>
    <% end %>
    </tbody>
    </table>
